{
  "name": "env-overlay",
  "version": "1.0.7",
  "description": "Easily see what environment you are viewing your application in via a small overlay",
  "main": "dist/index.js",
  "module": "dist/env-overlay.es6.js",
  "typings": "dist/index.d.ts",
  "author": "Igor Szyporyn <igor.szyporyn@gmail.com>",
  "license": "MIT",
  "repository": "IgorSzyporyn/env-overlay",
  "files": [
    "dist"
  ],
  "keywords": [
    "env",
    "environment",
    "overlay",
    "typescript",
    "informative",
    "notification"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "cross-env": "^5.2.0",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "rollup": "^1.7.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^6.0.2",
    "size-limit": "^0.21.1",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {},
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "1.2 kB"
    },
    {
      "path": "./dist/env-overlay.es6.js",
      "limit": "1.2 kB"
    },
    {
      "path": "./dist/env-overlay.umd.production.js",
      "limit": "1 kB"
    }
  ],
  "scripts": {
    "test": "jest --env=jsdom",
    "test:watch": "npm run test -- --watch",
    "start": "rimraf dist && mkdir dist && cp ./index.js ./dist/index.js && NODE_ENV=development rollup -w -c | tsc -w -p tsconfig.base.json",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsc -p tsconfig.base.json  && rollup -c && rimraf compiled && cp ./index.js ./dist/index.js",
    "prepublish": "npm run build",
    "format": "prettier --config ./.prettierrc --write 'src/**/*' 'test/**/*' 'README.md'",
    "precommit": "lint-staged",
    "size": "size-limit"
  }
}
